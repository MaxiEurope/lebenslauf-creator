<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.lebenslauf.MainController" hgap="10" vgap="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label text="First Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="firstNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Last Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="lastNameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Gender:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="genderField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Birth Place:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="birthPlaceField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label text="Birth Date:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <TextField fx:id="birthDateField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <Label text="City:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <TextField fx:id="cityField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

    <Label text="Address:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
    <TextField fx:id="addressField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

    <Label text="Postal Code:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
    <TextField fx:id="postalCodeField" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

    <Label text="Phone Number:" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
    <TextField fx:id="phoneNumberField" GridPane.rowIndex="8" GridPane.columnIndex="1"/>

    <Label text="Email:" GridPane.rowIndex="9" GridPane.columnIndex="0"/>
    <TextField fx:id="emailField" GridPane.rowIndex="9" GridPane.columnIndex="1"/>

    <Label text="Experience:" GridPane.rowIndex="10" GridPane.columnIndex="0"/>
    <TextArea fx:id="experienceField" prefRowCount="5" GridPane.rowIndex="10" GridPane.columnIndex="1"/>

    <Label text="Education:" GridPane.rowIndex="11" GridPane.columnIndex="0"/>
    <TextArea fx:id="educationField" prefRowCount="5" GridPane.rowIndex="11" GridPane.columnIndex="1"/>

    <Button text="Select Image" onAction="#handleImageUpload" GridPane.rowIndex="12" GridPane.columnIndex="0"/>
    <Label fx:id="imagePathLabel" GridPane.rowIndex="12" GridPane.columnIndex="1"/>

    <Button text="Submit" onAction="#handleSubmit" GridPane.rowIndex="13" GridPane.columnIndex="1"/>

    <Label fx:id="confirmationLabel" GridPane.rowIndex="14" GridPane.columnIndex="1"/>
</GridPane>
